{
    "name": "spkm/isams",
    "description": "A PHP wrapper for using iSAMS public REST API",
    "license": "MIT",
    "keywords": [
        "isams",
        "api",
        "rest",
        "laravel"
    ],
    "authors": [
        {
            "name": "Simon Mitchell",
            "email": "spkm@cranleigh.org",
            "role": "Lead Developer"
        },
        {
            "name": "Fred Bradley",
            "email": "frb@cranleigh.org",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "~6||~7",
        "illuminate/support": "~8||~9",
        "illuminate/http": "~8||~9",
        "intervention/image": "^2.7"
    },
    "require-dev": {
        "phpunit/phpunit": "~9",
        "friendsofphp/php-cs-fixer": "^2.18",
        "vimeo/psalm": "^4.4.1"
    },
    "autoload": {
        "psr-4": {
            "spkm\\isams\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "spkm\\isams\\IsamsServiceProvider"
            ],
            "aliases": {
                "Isams": "spkm\\isams\\Facades\\Isams"
            }
        }
    },
    "suggest": {
        "laravel/framework": "The Laravel Framework."
    },
    "autoload-dev": {
        "psr-4": {
            "spkm\\isams\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "psalm": "vendor/bin/psalm --show-info=true",
        "format": "vendor/bin/php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    }
}

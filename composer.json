{
    "name": "spkm/isams",
    "description": "A PHP wrapper for using iSAMS public REST API",
    "license": "MIT",
    "keywords": [
        "isams",
        "api",
        "rest",
        "laravel"
    ],
    "authors": [
        {
            "name": "Simon Mitchell",
            "email": "spkm@cranleigh.org",
            "role": "Lead Developer"
        },
        {
            "name": "Fred Bradley",
            "email": "frb@cranleigh.org",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3",
        "ext-json": "*",
        "guzzlehttp/guzzle": "~6||~7",
        "illuminate/support": "~6||~7||~8",
        "illuminate/http": "~6||~7||~8",
        "symfony/http-foundation": "^4.4.7 || ^5.1",
        "symfony/psr-http-message-bridge": "^1.0 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "vimeo/psalm": "^3.12"
    },
    "autoload": {
        "psr-4": {
            "spkm\\isams\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "spkm\\isams\\IsamsServiceProvider"
            ]
        }
    },
    "suggest": {
        "laravel/laravel": "The Laravel Framework."
    },
    "autoload-dev": {
        "psr-4": {
            "spkm\\isams\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "psalm": "vendor/bin/psalm --show-info=true",
        "format": "vendor/bin/php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    }
}
